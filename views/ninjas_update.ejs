<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head') %>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <img alt="Brand" src="https://vignette.wikia.nocookie.net/shinobicraft/images/3/37/Konohagakure_symbol.png/revision/latest?cb=20140220160642" height="100" width="100">
        </a>
      </div>
      <h1><a href="/">NINJABASE</a></h1>
      <a href="/ninjas">Ninjas | </a>
      <a href="/ninjas/new">New Ninja | </a>
      <a href="/contracts">Contracts | </a>
      <a href="/contracts/new">New Contract</a>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col col-sm-12">
        <h1> <center>UPDATE NINJA</center></h1>
        <% ninja.forEach(function(ninja) { %>
          <form class="updateForm" action="/ninjas/<%=ninjas.nin_id%>/?_method=PUT" method="POST">


            <div class="row">
              <div class="col col-sm-4">
                <div class="form-updateNin">
                  <label>Name</label>
                  <input name="full_name" value="<%=ninja.full_name%>">
                </div>

                <div class="form-updateNin">
                  <label>Team Name</label>
                  <input name="code_name" value="<%=ninja.team_name%>">
                </div>

                <div class="form-updateNin">
                  <label>Contact Info</label>
                  <input name="contact_info" value="<%=ninja.contact_info%>">
                </div>

                <div class="form-updateNin">
                  <label>Weapon</label>
                  <input name="weapon" value="<%=ninja.weapon%>">
                </div>

              </div>
              <div class="col col-sm-4">
                <div class="form-updateNin">
                  <label>Age</label>
                  <input name="age" value="<%=ninja.age%>">
                </div>

                <div class="form-updateNin">
                  <label>Price</label>
                  <input name="price" value="<%=ninja.price%>">
                </div>

                <div class="form-updateNin">
                  <label>Rating</label>
                  <input name="rating" value="<%=ninja.rating%>">
                </div>

                <div class="form-updateNin">
                  <label>Kills</label>
                  <input name="kills" value="<%=ninja.kills%>">
                </div>
              </div>

              <div class="col col-sm-4">
                <button type="submit" class="btn
               btn-primary">Submit</button>
              </div>

          </form>
          <% }); %>



            <%- include('./partials/scripts') %>
</body>

</html>
